
@{
    ViewBag.Title = "Foodlist";
}

<h2>Foodlist</h2>

<table class="table table-bordered">
    <tr>
        <th>
            Food Name
        </th>
        <th>
            Preserve time
        </th>
        <th>
            Food Amount
        </th>
        <th>
            Location
        </th>
        <th>
            Status
        </th>
        <th>
            Restaurant name
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.FoodName
            </td>
            <td>
                @item.PreserveTime
            </td>
            <td>
                @item.FoodAmount
            </td>
            <td>
                @item.Location
            </td>
            <td>
                @item.Status
            </td>
            <td>
                @item.Restaurant.ResName
            </td>
        </tr>
    }

</table>

